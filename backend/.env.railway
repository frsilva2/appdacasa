# Variáveis de Ambiente para Railway
# Copie e cole essas variáveis no Railway Dashboard

NODE_ENV=production
PORT=5000

# DATABASE_URL será gerado automaticamente pelo Railway MySQL
# Não adicione manualmente - o Railway cria automaticamente

# JWT - IMPORTANTE: Use uma chave segura e única!
JWT_SECRET=emporio-tecidos-2025-producao-chave-super-segura-trocar
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info

# Frontend URL - Atualizar após deploy do Vercel
FRONTEND_URL=https://temporary-url.vercel.app

# WhatsApp (opcional)
DEFAULT_WHATSAPP_NUMBER=5531999999999
