# =====================================================
# ENVIRONMENT
# =====================================================
NODE_ENV=development

# =====================================================
# DATABASE
# =====================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=emporio_tecidos
DB_USER=emporio
DB_PASSWORD=emporio123
DB_ROOT_PASSWORD=root123

# Prisma
DATABASE_URL="mysql://emporio:emporio123@localhost:3306/emporio_tecidos"

# =====================================================
# BACKEND
# =====================================================
BACKEND_PORT=5000
FRONTEND_URL=http://localhost:5173

# JWT
JWT_SECRET=emporio-tecidos-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# =====================================================
# FRONTEND
# =====================================================
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:5000/api

# =====================================================
# UPLOADS & STORAGE
# =====================================================
# Opção 1: Local (desenvolvimento)
UPLOAD_PROVIDER=local
UPLOAD_DIR=./uploads

# Opção 2: Cloudinary (produção)
# UPLOAD_PROVIDER=cloudinary
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# =====================================================
# OCR
# =====================================================
# Opção 1: Tesseract.js (gratuito, local)
OCR_PROVIDER=tesseract

# Opção 2: Google Vision API (pago, mais preciso)
# OCR_PROVIDER=google
# GOOGLE_VISION_API_KEY=your_api_key

# =====================================================
# WHATSAPP
# =====================================================
# URL base para geração de links WhatsApp
WHATSAPP_BASE_URL=https://wa.me/
DEFAULT_WHATSAPP_NUMBER=5531999999999

# =====================================================
# EMAIL (opcional para notificações)
# =====================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# =====================================================
# RATE LIMITING
# =====================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# LOGS
# =====================================================
LOG_LEVEL=info
LOG_DIR=./logs
